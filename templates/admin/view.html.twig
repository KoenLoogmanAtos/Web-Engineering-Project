{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<h3>{{ type | replace({'_' : ' '}) | title }}</h3>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <th class="align-middle">Info</th>
                <th class="text-right">
                    <form action="{{ path(type ~ '_delete', {'id' : 0}) }}" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <a href="{{ path(type ~ '_edit', {'id' : entity.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                        <button type="submit" type="button" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </th>
            </thead>
            <tbody>
                {% block tbody %}
                {% endblock %}
            </tbody>
        </table>
        {% block info %}
        {% endblock %}
    </div>
</div>
{% endblock %}
