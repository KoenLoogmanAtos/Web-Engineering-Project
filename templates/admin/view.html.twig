{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<h3>{{ type | replace({'_' : ' '}) | title }}</h3>
<div class="row">
    <div class="col">
        <table class="table">
            <thead>
                <th class="align-middle">Info</th>
                <th class="text-right">
                    <a href="{{ path(type ~ '_edit', {'id' : entity.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                </th>
            </thead>
            <tbody>
                {% block tbody %}
                {% endblock %}
            </tbody>
        </table>
        {% block info %}
        {% endblock %}
    </div>
</div>
{% endblock %}
